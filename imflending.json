{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF Lending Outstanding",
      "subtitle":"Credit outstanding to all members, SDRs (billions). Source: IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "#179fdb",
      "subtitleColor":"#179fdb"},
  


  "config": {
    "background":"#122b39",
    "view": {
      "stroke": "transparent"}},
      
    
  "data":{"url": "https://raw.githubusercontent.com/HerbieDB/HerbieDB.github.io/main/data_IMF_creditOutstanding.csv"},
  
  "transform": [
    {"calculate": "datum.Totals/1000000000", "as": "billions"}
  ],


  "height": 300,
  "width": 300,

  "mark": {
    "type": "bar",
    "point": false,
    "interpolate": "linear",
    "color":"#f4c245"
  },

"encoding": {
     "x": {
       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45,
         "labelColor":"#00a767"}},

      "y": {
        "field": "billions",
        "type": "quantitative",
        "title": "",
        "axis": {
          "grid": false,
          "labelColor":"#00a767"}}
}
}