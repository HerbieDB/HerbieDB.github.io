{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  
   "title": {
    "text": "Ethereum: long run",
    "subtitle":"Daily ETH price in USD. Source: Coinbase via FRED",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "middle",
    "color": "#179fdb",
    "subtitleColor":"#179fdb"},
  
  "config": {
    "background":"#122b39",
    "view": {
      "stroke": "transparent"}},
  
  
  
    "width":290,
    "height":300,
  
  
    "data": {
      "name":"myData",
      "url": "https://raw.githubusercontent.com/HerbieDB/HerbieDB.github.io/main/CBETHUSD.csv"},
  
  
    "mark": {
    "type": "line",
    "point": false,
    "interpolate": "linear",
    "color":"#f4c245"
  },
  
  
    "transform": [
      {"calculate": "timeParse(datum.DATE, '%Y-%m-%d')", "as": "date"},
      {"calculate": "year(datum.date)", "as": "year"},
  
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"}
  ],
  
    "params": [    
      {"name":"minYear", "value":2016,
         "bind":{
           "input": "range",
           "min": 2016, 
           "max": 2022, 
           "step": 1,
           "name": "Start year:"}
      },
  
      {"name":"maxYear", "value":2022,
         "bind":{
           "input": "range",
           "min": 2016, 
           "max": 2022, 
           "step": 1,
           "name": "End year:"}
      }
    ],
  
  
  
    "encoding": {
      
     
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": null,
        "grid": false,
        "labelSeparation": 10,
        "domainColor":"dimgrey",
        "labelColor":"#00a767",
        "tickColor":"pink",
        "gridColor":"dimgrey"
      }},
  
    "y": {
      "field": "CBETHUSD",
      "type": "quantitative",
      "title": "",
      "axis": {
        "grid": false,
        "domainColor":"dimgrey",
        "labelColor":"#00a767",
        "tickColor":"pink",
        "gridColor":"dimgrey",
        "format":"$,.5"}
        }
     }
  }